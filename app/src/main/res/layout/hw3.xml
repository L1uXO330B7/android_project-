<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DDDCDC"
            android:padding="4dp"
            android:text="遊戲名稱"
            android:textColor="#434040" />

        <TextView
            android:id="@+id/textView1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EBD7F6"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="遊戲版本"
            android:textColor="#F19E22" />

        <TextView
            android:id="@+id/textview1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#DDDCDC"
            android:padding="4dp"
            android:text="手機系統版本"
            android:textColor="#494242" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/textView2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="瑪莉歐大賽車"
            android:textColor="#246CF8" />

        <TextView
            android:id="@+id/textView2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="version  1.6.0"
            android:textColor="#246CF8" />

        <TextView
            android:id="@+id/textView2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Android  6.0"
            android:textColor="#246CF8" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="英雄聯盟"
            android:textColor="#55C7F4" />

        <TextView
            android:id="@+id/textView3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="version  1.4.11"
            android:textColor="#55C7F4" />

        <TextView
            android:id="@+id/textView3_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Android  5.0"
            android:textColor="#55C7F4" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="艾爾登法環"
            android:textColor="#6ADF9E" />

        <TextView
            android:id="@+id/textView4_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="version  2.4.1"
            android:textColor="#6ADF9E" />

        <TextView
            android:id="@+id/textView4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android  10.0"
            android:textColor="#6ADF9E" />
    </TableRow>
</TableLayout>